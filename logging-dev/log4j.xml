<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>

<!-- writes out to console/stdout -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%t] %-5p %c{2} - %m%n"/>
        </layout>
    </appender>
    
    <!--

    <category name="org.phenoscape" additivity="false">
        <priority value="info"/>
        <appender-ref ref="console"/>
    </category>
    
    <category name="org.obo.annotation" additivity="false">
        <priority value="info"/>
        <appender-ref ref="console"/>
    </category>
    
    <category name="org.obo.app" additivity="false">
        <priority value="info"/>
        <appender-ref ref="console"/>
    </category>

    -->
    
    <root>
        <priority value="all" />
        <appender-ref ref="console" />
    </root>
    
</log4j:configuration>
